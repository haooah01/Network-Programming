<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="@Assets["lib/bootstrap/dist/css/bootstrap.min.css"]" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["blazerweb.styles.css"]" />
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>

<body>
    <!-- Splash Screen -->
    <div id="splash-screen">
        <div class="splash-container">
            <div class="splash-logo">
                <div class="logo-circle">
                    <i class="fas fa-laptop-code"></i>
                </div>
                <div class="floating-tech-icons">
                    <div class="tech-icon tech-1"><i class="fab fa-microsoft"></i></div>
                    <div class="tech-icon tech-2"><i class="fab fa-js-square"></i></div>
                    <div class="tech-icon tech-3"><i class="fas fa-cloud"></i></div>
                    <div class="tech-icon tech-4"><i class="fab fa-docker"></i></div>
                </div>
            </div>
            <h1 class="splash-title">John Smith</h1>
            <p class="splash-subtitle">Senior Full-Stack Developer</p>
            <div class="loading-bar">
                <div class="loading-progress"></div>
            </div>
            <p class="loading-text">Loading portfolio...</p>
        </div>
    </div>

    <Routes />
    
    <script>
        // Hide splash screen when Blazor is ready
        document.addEventListener('DOMContentLoaded', function() {
            // Minimum splash time for smooth UX
            setTimeout(function() {
                const splash = document.getElementById('splash-screen');
                if (splash) {
                    splash.classList.add('fade-out');
                    setTimeout(function() {
                        splash.style.display = 'none';
                    }, 500);
                }
            }, 2000); // Show splash for at least 2 seconds
        });
    </script>
    <script src="_framework/blazor.web.js"></script>
</body>

</html>
